[push]
	default = simple

[user]
# set email in $HOME/.config/git/config
	name = Joe Kearney

[color]
  diff = always
  status = auto
  branch = auto
  interactive = auto
  ui = true
  pager = true

[alias]
  co = checkout
  st = status
  hist = log --graph --all --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
	hub = "!f() { \
			if [[ $1 == '' ]]; then \
				echo 'Usage: git hub [<org>] <repo>'; \
				exit 1; \
			fi; \
			if [[ $2 == '' ]]; then \
				local repo=$1; \
				local org=$(pwd | xargs basename); \
				local url=git@github.com:$org/$repo.git; \
				echo \"Cloning from [${RED}$url${RESTORE}] into [${GREEN}$(pwd)/$repo${RESTORE}]\"; \
				git clone $url; \
			else \
				local org=$1; \
				local repo=$2; \
				local url=git@github.com:$org/$repo.git; \
				local target=\"~/git/$org/$repo\" \
				echo \"Cloning from [${RED}$url${RESTORE}] into [${GREEN}${target}${RESTORE}] \" \
				git clone $url $target; \
			fi \
		}; f"
	unstash = stash apply
	current-branch = rev-parse --abbrev-ref HEAD
	new-branch = checkout -b
	push-upstream = "!f() { git push --set-upstream origin $(git current-branch); }; f"
  dif = diff --color-words
	gi = "!gi() { curl -L -s https://www.gitignore.io/api/$@ ;}; gi"
	gi-standard = "!g() { git gi eclipse,intellij,osx,scala,java,maven; }; g"
	repodir = "!f() { git rev-parse --show-toplevel; }; f"
	ignore = "!gi() { echo $@ >> $(git repodir)/.gitignore; }; gi"
