[push]
	default = simple
	
[user]
# set email in $HOME/.config/git/config
	name = Joe Kearney

[color]
  diff = always
  status = auto
  branch = auto
  interactive = auto
  ui = true
  pager = true

[alias]
  co = checkout
  st = status
  hist = log --graph --all --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
	hub = "!f() { if [[ $1 == '' || $2 == '' ]]; then echo 'Usage: git hub <org> <repo>'; exit 1; fi; git clone git@github.com:$1/$2.git ~/git/$1/$2; }; f"
	unstash = stash apply
	current-branch = rev-parse --abbrev-ref HEAD
	new-branch = checkout -b
	push-upstream = "!f() { git push --set-upstream origin $(git current-branch); }; f"
  dif = diff --color-words
